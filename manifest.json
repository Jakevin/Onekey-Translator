{
    "manifest_version": 3,
    "default_locale": "en",
    "name": "__MSG_extension_name__",
    "version": "1.2.2",
    "description": "__MSG_extension_description__",
    "permissions": [
        "storage",
        "sidePanel",
        "contextMenus"
    ],
    "side_panel": {
        "default_path": "options.html"
    },
    "action": {
        "default_title": "__MSG_action_title__",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "web_accessible_resources": [
        {
            "resources": [
                "icons/icon48.png"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "dom_utils.js",
                "content_script.js",
                "translate.js"
            ]
        }
    ]
}